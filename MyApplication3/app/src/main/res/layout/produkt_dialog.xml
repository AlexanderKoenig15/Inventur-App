<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Barcode:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/Barcode"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/Barcodefeld" android:hint="Barcode"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <CheckedTextView
                    android:text="Name:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkedTextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/namefeld" android:hint="Name"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <CheckedTextView
                    android:text="Anzahl:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkedTextView2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/anzahlfeld" android:hint="Anzahl"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <CheckedTextView
                    android:text="Inhalt:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/inhalt"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/inhaltfeld" android:hint="Inhalt"/>
            <TextView
                    android:text="g"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView2"
                    android:gravity="center_vertical" tools:text="g"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <CheckedTextView
                    android:text="Energie:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/energie"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/Energiefeld" android:hint="Energie"/>
            <TextView
                    android:text="kcal/100g"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView3"
                    android:gravity="center_vertical" tools:text="kcal/100g"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <CheckedTextView
                    android:text="VPE:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/VPE"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/vpefeld" android:hint="VPE"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <CheckedTextView
                    android:text="MhdMin:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/mhdMin"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/mhdMinfeld" android:hint="MhdMin"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <CheckedTextView
                    android:text="Mhdmax:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/mhdMax"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/mhdMaxfeld" android:hint="MhdMax"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>